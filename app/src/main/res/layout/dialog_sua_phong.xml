<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa Phòng"
        android:textSize="36dp"
        android:background="@color/yellow"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edt_themsophong_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Số Phòng"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgiaphong_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá Phòng"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgiadien_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá Điện"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgianuoc_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá Nước"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgiawifi_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Gia Wifi"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_them_phong_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDividerView"
            android:text="Sửa"
            android:layout_weight="2"
            android:background="@drawable/bg_white_conor_10_border_gary" />

        <Button
            android:id="@+id/btn_huy_phong_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorDividerView"
            android:text="Hủy"
            android:layout_weight="2"
            android:background="@drawable/bg_white_conor_10_border_gary" />
    </LinearLayout>

</LinearLayout>
