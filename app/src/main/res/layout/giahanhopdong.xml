<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Gia hạn Hợp Đồng"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Ngày hết hạn: 20/11/2022"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tvngayHetHan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:text="Ngày hết Hạn Mới" />
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_NgayTao_GiaHan"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/calendar_24"
                />

            <EditText
                android:id="@+id/ed_NgayGiaHan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd/mm/yyyy"
                android:padding="20sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_giaHanHd"
                android:layout_width="wrap_content"
                android:text="Gia Hạn"
                android:layout_marginStart="20sp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_HuygiaHanHd"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:text=" Hủy Gia Hạn"
                android:layout_marginEnd="20sp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

</LinearLayout>