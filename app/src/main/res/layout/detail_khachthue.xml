<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:text="Thông tin khách thuê"
        android:gravity="center"
        android:textSize="36dp"
        android:textStyle="bold"
        android:background="@color/yellow"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20sp"
        android:paddingLeft="50dp"
        android:textSize="26sp"
        android:id="@+id/thongtinname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên: Võ Quang Huy"
        android:background="@drawable/bg_white_conor_10_border_gary"
       />

    <TextView
        android:paddingLeft="50dp"
        android:textSize="26sp"
        android:layout_marginTop="20sp"
        android:id="@+id/thongtinsdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SĐT:"
        android:background="@drawable/bg_white_conor_10_border_gary" />

    <TextView
        android:paddingLeft="50dp"
        android:textSize="26sp"
        android:id="@+id/thongtincccd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CCCD"
        android:layout_marginTop="20sp"
        android:background="@drawable/bg_white_conor_10_border_gary" />

    <TextView
        android:paddingLeft="50dp"
        android:textSize="26sp"
        android:layout_marginTop="20sp"
        android:id="@+id/thongtinophong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ở PHÒNG:"
        android:background="@drawable/bg_white_conor_10_border_gary"/>
    <Button
        android:id="@+id/btn_dissmiss_khachthue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:text="quay lại"/>
</LinearLayout>