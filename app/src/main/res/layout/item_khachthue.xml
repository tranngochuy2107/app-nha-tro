<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:id="@+id/ln_menu_khachthue"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_item_khachThue"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="1.Nguyễn Văn A"
                android:textColor="#C309C0"
                android:textSize="20dp"/>
            <ImageView
                android:layout_marginBottom="10dp"
                android:id="@+id/icon1"
                android:layout_width="20dp"
                android:layout_below="@id/txt_item_khachThue"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_content_paste_24"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/txtCCCD"
                android:layout_below="@id/txt_item_khachThue"
                android:text="CCCD: 032392392"
                android:textSize="16dp"
                android:layout_alignStart="@id/icon1"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtPhongTro"
                android:layout_below="@id/txtCCCD"
                android:text="Phòng Trọ: 301"
                android:textSize="16dp"
                android:layout_alignStart="@id/icon1"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="20dp"

                android:layout_below="@id/icon1"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_home_24"
                android:layout_height="20dp"/>
            <LinearLayout
                android:id="@+id/layoutsdt"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon3"
                    android:layout_marginTop="20dp"
                    android:layout_width="20dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:layout_height="20dp"/>
                <TextView
                    android:id="@+id/txtSDT"
                    android:layout_marginTop="20dp"
                    android:text="SĐT: 032939193192"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/HDKhachThue"
                android:layout_below="@id/layoutsdt"
                android:layout_alignParentEnd="true"
                android:layout_width="40dp"
                android:src="@drawable/unhd"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>