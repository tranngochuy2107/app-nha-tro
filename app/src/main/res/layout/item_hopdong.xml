<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/linear_item_hd"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
        <LinearLayout

            app:cardElevation="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:backgroundTint="@color/yellow"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_item_hopDong"

                            android:textStyle="bold"
                            android:text="#1. Hợp đồng phòng 201"
                            android:textColor="#C309C0"
                            android:textSize="20dp"/>
                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:id="@+id/txtKhachThue"
                            android:layout_below="@id/txt_item_hopDong"
                            android:text="Tên người dùng"
                            android:textSize="16dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                            android:id="@+id/txtNgayBatdau"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/txtKhachThue"
                            android:text="Ngày bắt đầu"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                            android:id="@+id/txtNgayketthuc"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/txtNgayBatdau"
                            android:text="Ngày kết thúc"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:id="@+id/txtcPerson"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@id/txtNgayketthuc"
                            android:text="2"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                            android:id="@+id/txtCar"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="15dp"
                            android:layout_below="@id/txtNgayketthuc"
                            android:layout_toRightOf="@id/txtcPerson"
                            android:text="2"
                            android:textSize="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/imghd"
                            android:layout_alignParentEnd="true"
                            android:layout_below="@id/txt_item_hopDong"
                            android:layout_marginEnd="30dp"
                            android:src="@drawable/hopdong"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                </RelativeLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>