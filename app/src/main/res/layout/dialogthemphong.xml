<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@color/colorDividerView"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Phòng"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:background="@color/yellow"
        android:gravity="center"/>

    <EditText
        android:id="@+id/edt_themsophong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Số Phòng"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgiaphong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá Phòng"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgiadien"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá Điện"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgianuoc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Giá Nước"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/edt_themgiawifi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Gia Wifi"
        android:textColor="@color/white"
        android:background="@drawable/bg_white_conor_10_border_gary"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >

        <Button
            android:id="@+id/btn_them_phong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_conor_10_border_gary"
            android:text="Thêm"
            android:layout_weight="2"
            android:textColor="@color/black"
             />

        <Button
            android:id="@+id/btn_huy_phong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_conor_10_border_gary"
            android:text="Hủy"
            android:layout_weight="2"
            android:textColor="@color/black"
             />
    </LinearLayout>





</LinearLayout>
